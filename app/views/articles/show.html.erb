<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<h2>Comments:</h2>
<%= render @article.comments %>

<h2>Add a Comment:</h2>
<%= render 'comments/form', commentable: @article, comment: Comment.new, commentable_type: 'Article', commentable_id: @article.id %>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Destroy', article_path(@article), method: :delete, data: {confirm: 'Are you sure?'} %>
<%= link_to 'Back to Articles', articles_path %>