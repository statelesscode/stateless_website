<h1>Stateless Code Comments</h1>

<table>
  <tr>
    <th>Commenter</th>
    <th>Body</th>
    <th>Actions</th>
  </tr>

  <% @comments.each do |comment| %>
  <tr>
    <td><%= comment.commenter %></td>
    <td><%= comment.body%></td>
    <td><%= link_to 'Parent', comment.commentable %>, 
    <%= link_to 'Edit', edit_comment_path(comment)%>,
    <%= link_to 'Destroy', comment_path(comment), method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to 'Articles', articles_path %></p>
<p><%= link_to 'Main site page', root_path %></p>